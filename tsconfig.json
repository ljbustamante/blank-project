{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "noEmit": true,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src"],
  "exclude": ["node_modules/**/*", ".vscode/**/*"],
  "ts-node": {
    "transpileOnly": true,
    "files": true
  }
}
